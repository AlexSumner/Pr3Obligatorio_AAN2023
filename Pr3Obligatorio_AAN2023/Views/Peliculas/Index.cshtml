@model IEnumerable<Pr3Obligatorio_AAN2023.Models.Pelicula>

@{
    ViewData["Title"] = "Index";
}
<div class="container border rounded p-3 m-5 bg-light">
    <style>
        .max-width-td {
            max-width: 200px;
        }
    </style>
    <h1>Peliculas</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duracion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sinopsis)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cartelera)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Clasificacion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duracion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sinopsis)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td class="max-width-td">
                        @Html.DisplayFor(modelItem => item.Cartelera)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clasificacion)
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>