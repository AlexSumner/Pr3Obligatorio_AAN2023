@model Pr3Obligatorio_AAN2023.Models.Funcion

@{
    ViewData["Title"] = "Create";
}
<div class="container border rounded p-3 m-5 bg-light">
<h1>Create</h1>

<h4>Funcion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Pelicula" class="control-label"></label>
                <select asp-for="Pelicula.Id" class="form-control">
                    <option value="">Seleccione una película</option>
                    @foreach (var pelicula in ViewBag.Peliculas)
                    {
                        <option value="@pelicula.Id">@pelicula.Titulo</option>
                    }
                </select>
                <span asp-validation-for="Pelicula.Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sala" class="control-label"></label>
                <select asp-for="Sala.NroSala" class="form-control">
                    <option value="">Seleccione una sala</option>
                    @foreach (var sala in ViewBag.Salas)
                    {
                        <option value="@sala.NroSala">@sala.NroSala</option>
                    }
                </select>
                <span asp-validation-for="Sala.NroSala" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
