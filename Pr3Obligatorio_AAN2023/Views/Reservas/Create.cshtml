@model Pr3Obligatorio_AAN2023.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Usuario.Nombre" class="control-label">Usuario</label>
                <select asp-for="Usuario.Nombre" class="form-control">
                    @foreach (var usuario in ViewBag.Usuarios)
                    {
                        <option value="@usuario.Value">@usuario.Text</option>
                    }
                </select>
                <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Asiento" class="control-label"></label>
                <input asp-for="Asiento" class="form-control" />
                <span asp-validation-for="Asiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
