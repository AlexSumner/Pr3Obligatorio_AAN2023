@model IEnumerable<Pr3Obligatorio_AAN2023.Models.Sala>

@{
    ViewData["Title"] = "Index";
}
<div class="container border rounded p-3 m-5 bg-light">

<h1>Salas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CantAsientos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CantAsientos)
            </td>
                    <td>
                        <button class="btn btn-outline-dark" asp-action="Edit" asp-route-id="@item.NroSala">Edit</button>
                    
                        <button class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.NroSala">Details</button>
                    
                        <button class="btn btn-outline-dark" asp-action="Delete" asp-route-id="@item.NroSala">Delete</button>
                    </td>
        </tr>
}
    </tbody>
</table>
</div>